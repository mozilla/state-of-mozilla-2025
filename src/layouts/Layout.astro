---
import "../styles/global.css";
import IntroWrapper from "../components/IntroWrapper.svelte";
import Header from "../components/Header.svelte";
import Footer from "../components/Footer.svelte";

// Normalize pathname by removing trailing slash, but keep "/" for root
const normalizedPath =
  Astro.url.pathname === "/" ? "/" : Astro.url.pathname.replace(/\/$/, "");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      type="image/png"
      sizes="180x180"
      href="/apple-touch-icon.05aa000f6748.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="196x196"
      href="/favicon-196x196.e143075360ea.png"
    />
    <link rel="shortcut icon" href="/favicon.d0be64e474b1.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>State of Mozilla 2025</title>
  </head>
  <body class="bg-gray min-h-svh flex flex-col">
    <div class="flex-1 flex flex-col container mx-auto lg:my-5 bg-white">
      <IntroWrapper client:load>
        <Header currentPage={normalizedPath} client:load />
        <main class="space-y-10 lg:space-y-20">
          <slot />
        </main>
        <Footer client:load />
      </IntroWrapper>
    </div>
    <script is:inline>
      if (sessionStorage.getItem("introShown")) {
        document.documentElement.classList.add("intro-seen");
      }
      if (sessionStorage.getItem("captchaVerified")) {
        document.documentElement.classList.add("captcha-seen");
      }
      if (sessionStorage.getItem("stopwallVerified")) {
        document.documentElement.classList.add("stopwall-seen");
      } else {
        // Also hide stopwall if progress is complete
        try {
          const progress = JSON.parse(localStorage.getItem("progress") || "{}");
          if (
            progress.stakes &&
            progress.manifesto &&
            progress.tools &&
            progress.rebels &&
            progress.ledger
          ) {
            document.documentElement.classList.add("stopwall-seen");
          }
        } catch (e) {}
      }

      // Handle hash scrolling after hydration (fixes Chrome not scrolling to anchors)
      if (window.location.hash) {
        const scrollToHash = () => {
          const target = document.querySelector(window.location.hash);
          if (target) {
            target.scrollIntoView();
          }
        };
        // Delay to allow for video/content loading
        setTimeout(scrollToHash, 500);
      }
    </script>
  </body>
</html>
